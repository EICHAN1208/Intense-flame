<!DOCTYPE html>
<html>
  <head>
    <title>Intense-flame</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
    <header id="header">
      <div class="container d-flex">
        <div class="logo mr-auto">
          <h1 class="text-light"><a href="/">Intense Flame<span>.</span></a></h1>
          <!-- Uncomment below if you prefer to use an image logo -->
          <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
        </div>
        <nav class="nav-menu d-none d-lg-block">
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/questions">Quiz</a></li>
            <li><a href="/pastquestions">Bulletin board</a></li>
            <% if user_signed_in? %>
                <li><a href="/pastquestions/new">投稿する</a></li>
                <li class="get-started"><a href="/users/<%= current_user.id %>">マイページ</a></li>
                <li class="get-started"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                <li><a><%= current_user.nickname %>さん</a></li>
            <% else %>
                <li class="get-started"><%= link_to "ログイン", new_user_session_path, class: 'post' %></li>
                <li class="get-started"><%= link_to "新規登録", new_user_registration_path, class: 'post' %></li>
            <% end %>
          </ul>
            <!-- <div class="collapse navbar-collapse" id="bs-navi">
              <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/">ホーム</a></li>
                <li class="nav-item"><a class="nav-link" href="/pastquestions">掲示板</a></li>
                <li class="nav-item"><a class="nav-link" href="#">クイズ</a></li>
              </ul>
            </div> -->
        </nav>
      </div>
    </header>


      <%= yield %>


    <footer id="footer">
      <div class="container footer-bottom clearfix">
        <div class="copyright">
          &copy; Copyright <strong><span>Intense Flame</span></strong>. All Rights Reserved
        </div>
      </div>
    </footer><!-- End Footer -->

    </div>
  </body>
</html>
